<div class="row">
  <%= form_for(@location, url: { action: 'create'}, html: { class: "form-signin"}) do |f| %>
    <h2>
      <%= "Add a new location!" %>
    </h2>
    <%= f.text_field :name,    class: "form-control text-top",    placeholder: "Name" %>
    <%= f.text_field :city,     class: "form-control text-middle", placeholder: "City" %>
    <%= f.text_field :state,    class: "form-control text-middle", placeholder: "State" %>
    <%= f.submit "Create", class: "btn btn-lg btn-primary btn-block" %>
  <% end %>
</div>
